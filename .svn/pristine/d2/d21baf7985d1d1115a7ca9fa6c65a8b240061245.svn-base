    <!-- 根据条件查询详情页的Bean -->
    <select id="queryDetailByParam" parameterType="java.util.Map" resultMap="productDetailResultMap">
        SELECT
            goods_info_id,
            goods_id,
            goods_info_item_no,
            goods_info_name,
            goods_info_subtitle,
            goods_info_added,
            goods_info_added_time,
            goods_info_stock,
            goods_info_prefer_price,
            goods_info_cost_price,
            goods_info_market_price,
            goods_info_weight,
            goods_info_img_id,
            goods_info_create_name,
            goods_info_create_time,
            goods_info_modified_name,
            goods_info_modified_time,
            goods_info_del_name,
            goods_info_del_time,
            goods_info_delflag,
            is_third,
        IFNULL(
        third_name,
        (
        SELECT
        enterprise_name
        FROM
        ysh_enterprise_info
        WHERE
        enterprise_id = (
        SELECT
        enterprise_id
        FROM
        np_goods_info_enterprise
        WHERE
        goods_info_id = ng.goods_info_id
        )
        )
        )third_name,
        IFNULL(
        third_id,
        (SELECT
        enterprise_id
        FROM
        np_goods_info_enterprise
        WHERE
        goods_info_id = ng.goods_info_id)
        )third_id,
            show_mobile,
            evaluation_count,
            goods_salenum,
            goods_collect
            <if test="subjectId != null">
                ,(
                SELECT
                subject_goods_price
                FROM
                np_subject_goods ns
                WHERE
                ns.subject_id = #{subjectId}
                AND ns.goodsproduct_id = ng.goods_info_id
                LIMIT 1
                ) subject_goods_price
            </if>
        FROM
            np_goods_info ng
        WHERE
            goods_info_id = #{productId}
    </select>

